doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Day View - Day Planner App
    // Bootstrap
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    // Date Picker
    link(href='stylesheets/datepicker.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    // material-floating-button
    link(href='stylesheets/mfb.css', rel='stylesheet')
    link(href='stylesheets/custom.css', rel='stylesheet')
    link(href='stylesheets/datepicker/bootstrap-datetimepicker.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css')

    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //
      if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') Day Planner App
    // Main jumbotron for a primary marketing message or call to action
    .jumbotron
      .container-fluid
        .col-lg-4
          br
          h3 Day View
          br
          .date-picker(data-date='04/26/2017', data-keyboard='true')
            .date-container.pull-left
              h4.weekday Wednesday
              h2.date April 26th
              h4.year.pull-right 2017
            span.fa.fa-angle-left(data-toggle='datepicker', data-type='subtract')
            span.fa.fa-angle-right(data-toggle='datepicker', data-type='add')
            .input-group.input-datepicker
              input#date-input.form-control(type='text', data-format='MM/DD/YYYY', placeholder='MM/DD/YYYY')
              span.input-group-btn
                button.btn.btn-default(type='button') Go!
            span.fa.fa-calendar(data-toggle='calendar')
    .container.container-map
      .row
        .col-lg-12
    #map(style='position:fixed !important;')    
    ul#menu.mfb-component--br.mfb-zoomin(data-mfb-toggle='hover')
      li.mfb-component__wrap
        a#newEventModel.mfb-component__button--main(href='#', data-mfb-label='Add New Engagement')
          i.mfb-component__main-icon--resting.ion-plus-round
          i.mfb-component__main-icon--active.ion-plus-round
    // Modal
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') ×
            h4.modal-title Add New Engagement
          .modal-body
            form
              .form-group
                label.form-control-label(for='title-name') Title:
                input#title-name.form-control(type='text', placeholder='Title')
              .form-group
                label.form-control-label(for='location-text') Location:
                // <input type="text" class="form-control" id="location-name" placeholder="Location">
                //
                  <input id="autocomplete" placeholder="Enter your address"
                  type="text" autocomplete="off" style="padding: 5px;width: 300px;margin: 10px 0px 0px 30px;" />
                input#location.form-control(type='text', placeholder='Enter a location')
              .form-group
                label.form-control-label(for='meetingdate-name') Meeting Date:
                .input-group.date.form_date.col-md-12(data-date='', data-date-format='dd MM yyyy', data-link-field='meetingdate-name', data-link-format='yyyy-mm-dd')
                  input.form-control(size='16', type='text', value='', readonly='')
                  span.input-group-addon
                    span.glyphicon.glyphicon-remove
                  span.input-group-addon
                    span.glyphicon.glyphicon-calendar
                input#meetingdate-name(type='hidden', value='')
              .form-group
                label.form-control-label(for='starttime-name') Start Time:
                .input-group.date.form_time.col-md-12(data-date='', data-date-format='hh:ii', data-link-field='starttime-name', data-link-format='hh:ii')
                  input.form-control(size='16', type='text', value='', readonly='')
                  span.input-group-addon
                    span.glyphicon.glyphicon-remove
                  span.input-group-addon
                    span.glyphicon.glyphicon-time
                input#starttime-name(type='hidden', value='')
              .form-group
                label.form-control-label(for='endtime-name') End Time:
                .input-group.date.form_time.col-md-12(data-date='', data-date-format='hh:ii', data-link-field='endtime-name', data-link-format='hh:ii')
                  input.form-control(size='16', type='text', value='', readonly='')
                  span.input-group-addon
                    span.glyphicon.glyphicon-remove
                  span.input-group-addon
                    span.glyphicon.glyphicon-time
                input#endtime-name(type='hidden', value='')
          .modal-footer
            button#closeengagement.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button#saveengagement.btn.btn-primary(type='button') Save
    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    // <script src="https://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>
    // Include all compiled plugins (below), or include individual files as needed
    script(src='javascripts/bootstrap.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.1/moment.min.js')
    script(src='javascripts/datepicker.js')
    script(type='text/javascript', src='javascripts/datepicker/bootstrap.min.js')
    script(type='text/javascript', src='javascripts/datepicker/bootstrap-datetimepicker.js', charset='UTF-8')
    script(type='text/javascript', src='javascripts/datepicker/locales/bootstrap-datetimepicker.uk.js', charset='UTF-8')
    script(defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDPBj4ylbh-9S0934uz395F1OS_4sXREvo&libraries=places')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js')
    script(src='javascripts/jquery.blockUI.js')
    script(src='javascripts/global.js')
    script(src='javascripts/main.js')

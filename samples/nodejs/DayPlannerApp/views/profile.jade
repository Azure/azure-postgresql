html
  title User Profile - Day Planner App
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
  script(src='javascripts/jquery.min.js')
  script(src='javascripts/bootstrap.min.js')
  script(src='javascripts/sweetalert.min.js')
  link(href='stylesheets/sweetalert.min.css', rel='stylesheet')
  link(href='stylesheets/profile.css', rel='stylesheet')
  script(src='javascripts/profile.js')
  body
    .container-fuide
      // ----------------Nav Bar Start------------------
      nav.navbar.navbar-inverse(role='navigation')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/dayplanner') DayPlannerApp
        #navbar.navbar-collapse.collapse
          ul.dropdown.nav.navbar-nav.navbar-right
            li.dropdown.nav.navbar-nav.navbar-right(style='margin-right: 0 !important;')
              a.dropdown-toggle(href='#', data-toggle='dropdown', data-target='dropdown', role='button', style='right: 15px;')
                i.fa.fa-user-circle
                |  #{firstname} #{lastname} 
                span.caret
              ul.dropdown-menu(style='right: 15px;')
                li
                  a(href='/profile')
                    i.fa.fa-user
                    |  Profile
                li.divider(role='separator')
                li
                  a(href='/logout')
                    i.fa.fa-sign-out
                    |  Log-Out
    .container
      // ----------------Nav Bar End------------------
      .row.profile
        .col-md-3
          .profile-sidebar
            .profile-userpic
              img.img-responsive(src='http://scriptmode.com/videostreamingtutorial/img/overview/user-management.png', alt='')
            .profile-usertitle
              .profile-usertitle-name
                | #{firstname}&nbsp;#{lastname}
            .profile-usermenu
              ul.nav
                li.active
                  a(href='/profile')
                    i.fa.fa-cog.fa-spin.fa-3x.fa-fw
                    | 									Account Settings
                li
                  a#btnlogout(href='/logout')
                    i.glyphicon.glyphicon-log-out
                    | 									Log-Out
        .col-md-9
          .profile-content
            ol.breadcrumb
              li
                a(href='/dayplanner')
                  i.fa.fa-home
                  |  Home
              li.active
                i.fa.fa-user
                |  Profile
            form#account()
              div.col-lg-5.col-md-5.col-xs-12(style='padding: 0;margin: auto;')
                .form-group
                  label First Name:
                  input#firstname.form-control(type='text', name='firstname', placeholder='Firstname', value='#{firstname}', readonly='')
              div.col-lg-1.col-md-1.col-xs-12(style='margin-right: 62px;')
              div.col-lg-5.col-md-5.col-xs-12(style='padding: 0;margin: auto;')
                .form-group
                  label Last Name:
                  input#lastname.form-control(type='text', name='lastname', placeholder='Lastname', value='#{lastname}', readonly='')
              .form-group
                label User Name:
                input#username.form-control(type='text', name='username', placeholder='Username', value='#{username} ', readonly='')
              div.col-lg-12.col-md-12.col-xs-12
                hr
              .form-group
                label Current Password:
                input#currentpassword.form-control(type='password', name='currentpassword', placeholder='Current Password', required, autofocus='')
              .form-group
                label New Password:
                input#newpassword.form-control(type='password', name='newpassword', placeholder='New Password', required)
              .form-group
                label Confirm Password:
                input#confirmpassword.form-control(type='password', name='confirmpassword', placeholder='Confirm Password', required)
              .col-sm-6.col-sm-offset-3
                center
                  button#btnchangepwd.btn.btn-success(type='button' style='margin-right:10px;')
                    i.glyphicon.glyphicon-saved
                    |  change password
                  button#clsbutton.btn.btn-warning(type='button')
                    i.glyphicon.glyphicon-remove
                    |  Clear
                  center
